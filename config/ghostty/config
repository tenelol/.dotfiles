# Ghostty config
# See: https://ghostty.org/docs/config

# Typography
font-family = "JetBrains Mono"
font-size = 12
font-feature = "calt"

# Window feel
window-padding-x = 14
window-padding-y = 12
window-decoration = "none"
window-show-tab-bar = "never"
background-opacity = 0.0
background-blur = 30

# Cursor
cursor-style = "block"

# Quick terminal
keybind = "ctrl+shift+space=toggle_quick_terminal"
quick-terminal-position = "right"
quick-terminal-size = "30%"

# Mac-like copy/paste
keybind = "super+c=copy_to_clipboard"
keybind = "super+v=paste_from_clipboard"

# Colors
# Keep default text colors; rely on background-opacity for transparency.

# Use a context menu on right-click.
right-click-action = "context-menu"
